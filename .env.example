# ═══════════════════════════════════════════════════════════════════════════════════
# Chirp Social Media App - Environment Configuration
# ═══════════════════════════════════════════════════════════════════════════════════
# 
# Copy this file to .env and fill in your values
# This file is read by BOTH client and server automatically
# 
# Usage: cp .env.example .env
# ═══════════════════════════════════════════════════════════════════════════════════

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SERVER CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Port where Express server runs
PORT=4000

# Environment mode
NODE_ENV=development

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DATABASE (MongoDB)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# MongoDB connection string
# For MongoDB Atlas (cloud):
# mongodb+srv://username:password@cluster.mongodb.net/chirp?retryWrites=true&w=majority
#
# For local MongoDB:
# mongodb://localhost:27017/chirp
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/chirp?retryWrites=true&w=majority

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AI PROVIDER (OpenRouter - Required for AI features)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Get your free API key from: https://openrouter.ai
# 1. Sign up at https://openrouter.ai
# 2. Go to API Keys section
# 3. Copy your API key (starts with sk_)
# 4. Paste below
OPENROUTER_API_KEY=sk_xxxxxxxxxxxxxxxxxxxx

# OpenRouter API base URL (usually doesn't need to change)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AUTHENTICATION (Clerk - Optional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Only needed if using Clerk for authentication
# Get from: https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# CLIENT CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Frontend URL (for CORS and redirects)
# Should match your frontend running port
FRONTEND_URL=http://localhost:5173

# Backend API Base URL (for frontend to connect to server)
VITE_BASEURL=http://localhost:4000/api

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# OPTIONAL: Cloudflare Workers (for distributed image generation)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Only if deploying Cloudflare Worker for image generation
# CLOUDFLARE_WORKER_URL=https://your-worker.workers.dev
# CLOUDFLARE_API_KEY=your_cloudflare_api_key

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
