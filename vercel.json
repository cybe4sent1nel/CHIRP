{
  "version": 2,
  "name": "chirp-production",
  "buildCommand": "npm run build:all",
  "outputDirectory": "client/dist",
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/configs/**",
          "server/controllers/**",
          "server/models/**",
          "server/routes/**",
          "server/middlewares/**",
          "server/utils/**",
          "server/inngest/**",
          "server/lib/**",
          "server/data/**"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/server.js"
    },
    {
      "source": "/inngest",
      "destination": "server/server.js"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "env": {
    "NODE_ENV": "production"
  }
}
